<h1>Flats</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-4">
    <% @flats.each do |flat| %>
      <%= link_to flat.name, flat_path(flat) %>
      <%= flat.address %></p>
      <%= flat.description %></p>
      <%= flat.price_per_night %></p>
      <%= flat.number_of_guests %></p>
  <% end %>
</div>
